
@{
    ViewBag.Title = "AgingData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="Aging" ng-init="AgingInit()">
    <link href="~/Content/MyTable.css" rel="stylesheet" />
    <div class="table-wrapper">
        <!-- Filter Section -->
        <div class="table-title text-center">
            <h3 style="font-size: 24px; color: #0097a7; font-weight: bold;">
                List of Vendors Agine
            </h3>
        </div>

        <!-- Table Wrapper with Overflow and Height -->
        <div style="overflow-y: scroll;height: 600px;">
            <table class="table table-bordered bg-white table-striped">
                <thead class="thead-light">
                    <tr>
                        <td></td>
                        <td>
                            <input type="text" ng-model="BPCode" placeholder="Search BP Code" class="form-control">
                        </td>
                        <td>
                            <input type="text" ng-model="BPName" placeholder="Search BP Name" class="form-control">
                        </td>
                        <td>
                            <input type="text" ng-model="Type" placeholder="Search Type" class="form-control">
                        </td>
                        <td>
                            <input type="text" ng-model="PostingDate" placeholder="Search Posting Date" class="form-control">
                        </td>
                        <td>
                            <input type="text" ng-model="DueDate" placeholder="Search Due Date" class="form-control">
                        </td>
                        <td>
                            <input type="text" ng-model="DocDate" placeholder="Search Doc Date" class="form-control">
                        </td>
                        <td>
                            <input type="text" ng-model="Ref1" placeholder="Search Ref1" class="form-control">
                        </td>
                        <td>
                            <input type="text" ng-model="Balance" placeholder="Search Balance" class="form-control">
                        </td>
                        <td>
                            <input type="text" ng-model="ZeroToThirty" placeholder="Search 0-30 Days" class="form-control">
                        </td>
                        <td>
                            <input type="text" ng-model="ThirtyOneToSixty" placeholder="Search 31-60 Days" class="form-control">
                        </td>
                        <td>
                            <input type="text" ng-model="SixtyOneToNinety" placeholder="Search 61-90 Days" class="form-control">
                        </td>
                        <td>
                            <input type="text" ng-model="NinetyToOneTwenty" placeholder="Search 90-120 Days" class="form-control">
                        </td>
                        <td>
                            <input type="text" ng-model="OneTwentyPlus" placeholder="Search 120+ Days" class="form-control">
                        </td>
                    </tr>
                    <tr style="background-color:#87abcb;">
                        <th>Sr. No</th>
                        <th>BP Code</th>
                        <th>BP Name</th>
                        <th>Type</th>
                        <th>Posting Date</th>
                        <th>Due Date</th>
                        <th>Doc Date</th>
                        <th>Ref1</th>
                        <th>Balance</th>
                        <th>0-30 Days</th>
                        <th>31-60 Days</th>
                        <th>61-90 Days</th>
                        <th>90-120 Days</th>
                        <th>120+ Days</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="x in Agine | filter: {BPCode: BP_Code, BPName: BP_Name, Type: Type, PostingDate: Posting_date, DueDate: Due_date, DocDate: _Doc_Date, Ref1: Ref1, Balance: Balance, ZeroToThirty: _0_30_days, ThirtyOneToSixty: _31_60_days, SixtyOneToNinety: _61_90_days, NinetyToOneTwenty: _90_120_days, OneTwentyPlus: _120__days}">
                        <td class="text-center">{{$index + 1}}</td>
                        <td class="text-center">{{x.BP_Code}}</td>
                        <td class="text-center">{{x.BP_Name}}</td>
                        <td class="text-center">{{x.Type}}</td>
                        <td class="text-center">{{x.Posting_date}}</td>
                        <td class="text-center">{{x.Due_date}}</td>
                        <td class="text-center">{{x.Doc_Date}}</td>
                        <td class="text-center">{{x.Ref1}}</td>
                        <td class="text-center">{{x.Balance}}</td>
                        <td class="text-center">{{x._0_30_days}}</td>
                        <td class="text-center">{{x._31_60_days}}</td>
                        <td class="text-center">{{x._61_90_days}}</td>
                        <td class="text-center">{{x._90_120_days}}</td>
                        <td class="text-center">{{x._120__days}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</div>

